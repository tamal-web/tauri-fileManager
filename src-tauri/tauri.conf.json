{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "fileM",
  "version": "0.1.0",
  "identifier": "com.tamal.fileM",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },

  "app": {
    "windows": [
      {
        "title": "fileM",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": {
        "default-src": ["'self'", "asset:"],
        "img-src": ["'self'", "asset:", "http://asset.localhost"],
        "media-src": ["'self'", "asset:"],
        "script-src": ["'self'", "'wasm-unsafe-eval'"],
        "style-src": ["'self'", "'unsafe-inline'"]
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      }
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
